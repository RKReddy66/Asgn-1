//Constructors

using System;
using System.Text.RegularExpressions;					
public class Employee{
	//fields
	private _accountID;
	private _name;
	private _balance;
	//properties
	public int AccountID
	{
		set{
			_accountID=value;
		}
		get{
			return _accountID;
		}
		
		public string Name{
			set{
			_name=value;
		}
		get{
			return _name;
		}
		public string Balance{
			set{
			_balance=value;
		}
		get{
			return _balance;
		}
